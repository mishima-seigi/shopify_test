{{ "sticky-hero.css" | asset_url | stylesheet_tag }}

<div class="page-width">
    <div class="sticky-hero__media" aria-hidden="true">
        {% for block in section.blocks %}
            {{ block.settings.block2-img | image_url: width: 300 | image_tag }}
        {% endfor %}
    </div>
    <div class="sticky-hero__content">
        {% for block in section.blocks %}    
            {{ block.settings.block2-text }}
        {% endfor %}
    </div>
</div>

{% schema %}
  {
    "name": "stucky-hero",
    "settings": [] ,
    "blocks": [
      {
        "name": "画像",
        "type": "block2",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "block2-img",
            "label": "画像を選択"
          },
          {
            "type": "textarea",
            "id": "block2-text",
            "label": "テキスト"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "sticky-hero"
      }
    ]
  }
{% endschema %}